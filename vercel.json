{
  "regions": ["bom1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 10
    },
    "api_py/*.py": {
      "maxDuration": 60
    },
    "api_py/solar.py": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/python/:path*",
      "destination": "/api_py/:path*"
    },
    {
      "source": "/python/solar/:path*",
      "destination": "/api_py/solar.py"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

