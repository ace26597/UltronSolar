{
  "regions": ["bom1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 10
    },
    "api/solar/**/*.py": {
      "maxDuration": 60,
      "excludeFiles": "**/node_modules/**"
    },
    "api/test.py": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/python/solar/(.*)",
      "destination": "/api/solar/$1"
    },
    {
      "source": "/python/test",
      "destination": "/api/test"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

